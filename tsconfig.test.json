{
	"compilerOptions": {
		"baseUrl": "src",
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"types": ["jest", "node"],
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		]
	},
	"include": [
		"src/**/*.test.ts"
	]
}
